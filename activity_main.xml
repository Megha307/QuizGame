<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sanjeevkumar.tricktest.MainActivity"
    android:background="@drawable/blackboard">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/scientistgif"
        android:layout_centerInParent="true"
        android:id="@+id/gifImageView" />

    <TextView
        android:id="@+id/trickyview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="20dp"
        android:fontFamily="casual"
        android:text=" Logic"
        android:textColor="@color/alizarin"
        android:textSize="50dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/trickyview"
        android:fontFamily="casual"
        android:text="Master"
        android:textColor="@color/sunflower"
        android:textSize="50dp"
        android:textStyle="bold" />
<ImageView
    android:layout_marginTop="20dp"
    android:layout_marginLeft="5dp"
    android:layout_width="50dp"
    android:layout_height="70dp"
    android:src="@drawable/trickyboy"
    android:id="@+id/imageView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:text=" PLAY GAME !! "
        android:background="@color/buttoncolor"
        android:drawableLeft="@drawable/gameicon"
        android:textColor="@android:color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        android:id="@+id/playbtn"


       />



</RelativeLayout>
